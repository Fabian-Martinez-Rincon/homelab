---
/**
 * Update the details below to match your personal information
 */

enum DetailType {
	title = 'title',
	subtitle = 'subtitle',
	description = 'description',
}

const details: {
	type: DetailType;
	content: string;
}[] = [
	{
		type: DetailType.title,
		content: `Fabian Martinez Rincon`,
	},
	{
		type: DetailType.description,
		content: 'Data Engineer | BB Media ðŸš€ðŸ’»',
	},
];

const getClass = (type: DetailType) => {
	switch (type) {
		case DetailType.title:
			return 'font-sora text-2xl font-bold tracking-wide md:text-1xl animate-fade-up duration-300 text-white';
		case DetailType.description:
			return 'text-sm font-normal tracking-wide md:text-base animate-fade-in duration-300 text-white';
	}
};
---

<div class="grid grid-cols-1 place-content-center place-items-center gap-5">
	{details.map((detail) => <p class={getClass(detail.type)}>{detail.content}</p>)}
</div>
